<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashboardActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/layout_big_space"
                android:layout_marginLeft="@dimen/layout_big_space"
                android:layout_marginRight="@dimen/layout_big_space"
                style="@style/TextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="근육별 운동 횟수" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_graph_size"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/layout_big_space"
                android:layout_marginLeft="@dimen/layout_big_space"
                android:layout_marginRight="@dimen/layout_big_space">

            </com.github.mikephil.charting.charts.PieChart>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_big_space"
                android:layout_marginRight="@dimen/layout_big_space"
                android:text="@string/pie_chartText" />

            <TextView
                android:layout_marginTop="@dimen/layout_big_space"
                android:layout_marginLeft="@dimen/layout_big_space"
                android:layout_marginRight="@dimen/layout_big_space"
                style="@style/TextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="일별 운동 시간" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_graph_size"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/layout_big_space"
                android:layout_marginLeft="@dimen/layout_big_space"
                android:layout_marginRight="@dimen/layout_big_space"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_big_space"
                android:layout_marginRight="@dimen/layout_big_space"
                android:text="@string/bar_chartText" />

            <TextView
                style="@style/TextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_big_space"
                android:layout_marginLeft="@dimen/layout_big_space"
                android:layout_marginRight="@dimen/layout_big_space"
                android:text="근육별 근전도 값의 평균" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_graph_size"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/layout_big_space"
                android:layout_marginLeft="@dimen/layout_big_space"
                android:layout_marginRight="@dimen/layout_big_space" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_big_space"
                android:layout_marginRight="@dimen/layout_big_space"
                android:layout_marginBottom="@dimen/layout_big_space"
                android:text="@string/line_chartText" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>