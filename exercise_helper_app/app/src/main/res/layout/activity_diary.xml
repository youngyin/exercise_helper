<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DiaryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/layout_big_space"
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Create Diary"
                android:textStyle="bold"
                android:textSize="@dimen/big_title_font_size" />

            <EditText
                android:id="@+id/title_editTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_big_space"
                android:layout_marginTop="@dimen/layout_big_space"
                android:layout_marginRight="@dimen/layout_big_space"
                android:background="@drawable/memo_border"
                android:hint="Title"
                android:padding="@dimen/layout_default_space"
                android:textColor="@color/white" />

            <Spinner
                android:id="@+id/category_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_big_space"
                android:layout_marginLeft="@dimen/layout_big_space"
                android:layout_marginRight="@dimen/layout_big_space"
                android:background="@drawable/memo_border"
                android:entries="@array/muscle"
                android:padding="@dimen/layout_default_space"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/delay_editTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_big_space"
                android:layout_marginLeft="@dimen/layout_big_space"
                android:layout_marginRight="@dimen/layout_big_space"
                android:background="@drawable/memo_border"
                android:padding="@dimen/layout_default_space"
                android:hint="Timer"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/content_editTV"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/layout_big_space"
                android:layout_marginLeft="@dimen/layout_big_space"
                android:layout_marginRight="@dimen/layout_big_space"
                android:background="@drawable/memo_border"
                android:hint="Memo"
                android:padding="@dimen/layout_default_space"
                android:textColor="@color/white" />

            <EditText
                android:hint="Date"
                android:id="@+id/time_editTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_big_space"
                android:layout_marginLeft="@dimen/layout_big_space"
                android:layout_marginRight="@dimen/layout_big_space"
                android:background="@drawable/memo_border"
                android:padding="@dimen/layout_default_space"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_marginTop="@dimen/layout_big_space"
                android:layout_marginLeft="@dimen/layout_big_space"
                android:layout_marginRight="@dimen/layout_big_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:layout_marginRight="@dimen/layout_default_space"
                    android:id="@+id/save_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:elevation="10dp"
                    android:text="SAVE"
                    android:textSize="@dimen/default_font_size"/>

                <Button
                    android:layout_marginLeft="@dimen/layout_default_space"
                    android:id="@+id/cancle_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CANCEL"
                    android:textSize="@dimen/default_font_size"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
