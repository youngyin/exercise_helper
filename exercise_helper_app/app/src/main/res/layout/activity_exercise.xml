<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="@dimen/layout_big_space"
        android:layout_marginLeft="@dimen/layout_big_space"
        android:layout_marginRight="@dimen/layout_big_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Connect Device"
        android:textSize="@dimen/big_title_font_size"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="@dimen/layout_big_space"
        android:layout_marginLeft="@dimen/layout_big_space"
        android:layout_marginRight="@dimen/layout_big_space"
        android:id="@+id/myTimerTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="00 : 00 : 00"
        android:textColor="@color/MainColor"
        android:textSize="@dimen/timer_font_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/playBtn"
            android:layout_width="@dimen/icon_default_size"
            android:layout_height="@dimen/icon_default_size"
            android:layout_gravity="center"
            android:layout_margin="@dimen/layout_small_space"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/play2"
            android:tint="@color/MainColor" />

        <ImageButton
            android:id="@+id/stopBtn"
            android:layout_width="@dimen/icon_default_size"
            android:layout_height="@dimen/icon_default_size"
            android:layout_gravity="center"
            android:layout_margin="@dimen/layout_small_space"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/pause2"
            android:tint="@color/MainColor" />

        <ImageButton
            android:id="@+id/resetBtn"
            android:layout_width="@dimen/icon_default_size"
            android:layout_height="@dimen/icon_default_size"
            android:layout_gravity="center"
            android:layout_margin="@dimen/layout_small_space"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/reset2"
            android:tint="@color/MainColor" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewReceive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_default_space"
        android:gravity="center"
        android:text="Not connected..."
        android:textSize="@dimen/default_font_size"/>

    <Button
        android:id="@+id/btnConnect"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/layout_big_space"
        android:layout_marginRight="@dimen/layout_big_space"
        android:text="connect"
        android:textSize="@dimen/default_font_size"/>

    <Button
        android:id="@+id/createDiaryBtn"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/layout_big_space"
        android:layout_marginRight="@dimen/layout_big_space"
        android:text="Create Diary"
        android:textSize="@dimen/default_font_size"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart_live"
        android:layout_margin="@dimen/layout_big_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_graph_size" />
</LinearLayout>
